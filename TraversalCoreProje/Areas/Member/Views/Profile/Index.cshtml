@model TraversalCoreProje.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="name" class="form-control"/>
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="surame" class="form-control" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="email" class="form-control"/>
    <br />
    @Html.Label("Parolanız")
    <input type="text" asp-for="password" class="form-control"/>
    <br />
    @Html.Label("Parola Tekrar")
    <input type="text" asp-for="confirmPassword" class="form-control" />
    <br />
    @Html.Label("Telefon Numaranız")
    <input type="text" asp-for="phoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image" />

    </div>
    <br />
    <button class="btn btn-primary">Güncelle</button>

 
</form>

